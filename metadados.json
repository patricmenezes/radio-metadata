<script>
fetch('https://raw.githubusercontent.com/patricmenezes/radio-metadata/main/metadados.json')
  .then(response => response.json())
  .then(data => {
    document.getElementById('titulo').innerText = data.titulo;
    document.getElementById('artista').innerText = data.artista;
    document.getElementById('album').innerText = data.album;
    document.getElementById('ano').innerText = data.ano;
    if (data.capa) {
      document.getElementById('capa').src = 'data:image/jpeg;base64,' + data.capa;
    }
  });
</script>

<p id="titulo"></p>
<p id="artista"></p>
<p id="album"></p>
<p id="ano"></p>
<img id="capa" src="" alt="Capa do Ã¡lbum">
